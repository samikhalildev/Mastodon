<main class="container-fluid">
    <div class="row">
        <section class="col-lg-8">

            <!-- TABLE -->
            <div class="panel panel-default panel-table mytable">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title tableheading">View Patients</h3>
                        </div>
                    </div>
                </div>

                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">

                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Username</th>
                            <th><em class="fa fa-cog"></em></th>
                        </tr>
                        </thead>

                        {{#each patients}}
                            <tr>
                                <td> <textarea class="form-control" cols="10" rows="1">{{this.name}}</textarea> </td>
                                <td> <textarea class="form-control" cols="10"rows="1">{{this.username}}</textarea> </td>
                                <td align="center">
                                    <a title="Submit changes" class="btn btn-default"><em class="fa fa-pencil"></em></a>
                                    <a title="Delete this row" class="btn btn-default"><em class="fa fa-trash"></em></a>
                                </td>
                            </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
            <!-- TABLE END -->

        </section>
    </div>
</main>
