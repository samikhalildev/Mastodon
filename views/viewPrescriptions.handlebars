<main class="container-fluid">
    <div class="row">
        <section class="col-lg-8">

            <!-- TABLE -->
            <div class="panel panel-default panel-table mytable">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title tableheading">View Prescriptions</h3>
                        </div>
                    </div>
                </div>

                <div class="panel-body">

                    {{#if isPatient}}
                        <table class="table table-striped table-bordered table-list">

                            <thead>
                                <tr>
                                    <th>Doctor</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Description</th>
                                </tr>
                            </thead>

                            {{#each prescriptions}}
                            <tr>
                                <td>{{this.doctor}}</td>
                                <td>19/10/2018</td>
                                <td>12:00PM</td>
                                <td> <textarea class="form-control form-readonly" rows="2" readonly>{{this.description}}</textarea> </td>
                            </tr>
                            {{/each}}

                            </tbody>
                        </table>

                    {{else}}
                        <table class="table table-striped table-bordered table-list">

                            <thead>
                            <tr>
                                <th>Patient</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Description</th>
                            </tr>
                            </thead>

                            {{#each prescriptions}}
                                <tr>
                                    <td>{{this.student}}</td>
                                    <td>19/10/2018</td>
                                    <td>12:00PM</td>
                                    <td> <textarea class="form-control form-readonly" rows="2" readonly>{{this.description}}</textarea> </td>
                                </tr>
                            {{/each}}

                            </tbody>
                        </table>
                    {{/if}}

                </div>
            </div>
            <!-- TABLE END -->

        </section>
    </div>
</main>
