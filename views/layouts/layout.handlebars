<!DOCTYPE html>
<html>

<head>
  <title>MASTODON</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/css/bootstrap.css"/>
    <link rel="stylesheet" href="/css/style.css" />

</head>

<body>

<!-- Header -->
    <header>
        <a href="/"> <img src="../images/uts-logo.png" alt="UTS logo" class="logo"> </a>
        <ul class="nav nav-pills pull-right">
            {{#if user }}
                <li class="topNav marginbtn" role="presentation">
                    <a href="/">Dashboard</a>
                </li>

                <li role="presentation">
                    <a href="/profile"> <img src="../images/userPic.png" class="profileImageDashboard"> </a>
                </li>

            {{else}}
                <li role="presentation">
                    <a href="/users/login">Login</a>
                </li>
                <li role="presentation">
                    <a href="/users/register">Register</a>
                </li>
            {{/if}}
        </ul>
    </header>

    <!-- Navigation -->
    <nav>
        <ul class="nav justify-content-center topNav">

            <li class="nav-item">
                <a class="nav-link active" href="#">Future students</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#">Current students</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#">Research and teaching</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#">Partners and community</a>
            </li>

        </ul>
    </nav>

  <div class="container-fluid containerPadding">
    <div class="row">
      <div class="col-lg-12">

        {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
        {{/if}}

          {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
        {{/if}}

          {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}}

          <!-- Left side bar -->
          {{#if user}}
                {{#if isDoctor}}
                    <aside class="col-lg-4 col-mg-12 col-sm-12">
                        <div class="control-panel">
                            <h4> DOCTOR CONTROL PANEL </h4>
                            <hr class="line">

                            <ul class="nav flex-column list-features">

                                <li class="nav-item">
                                    <a class="nav-link" href="/"> View Appointments </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/addAvailability"> Add Availability </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/ViewPrescriptions">View Prescriptions</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/uploadPrescriptions">Upload Prescriptions</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/editDetails">Edit personal details</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/changePassword">Change password</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/users/logout">Log out</a>
                                </li>

                            </ul>
                        </div>
                    </aside>

                {{else if isStudent}}
                    <aside class="col-lg-4 col-mg-12 col-sm-12">
                        <div class="control-panel">
                            <h4> STUDENT CONTROL PANEL </h4>
                            <hr class="line">

                            <ul class="nav flex-column list-features">

                                <li class="nav-item">
                                    <a class="nav-link" href="/bookAppointments">Book appointments</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/viewDoctors">View Doctors</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/viewPrescriptions">My Prescriptions</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/editDetails">Edit personal details</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/changePassword">Change password</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/createMedicalForm">Create Medical Form</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/users/logout">Log out</a>
                                </li>

                            </ul>
                        </div>
                    </aside>

                {{else if isAdmin}}
                    <aside class="col-lg-4 col-mg-12 col-sm-12">
                        <div class="control-panel">
                            <h4> ADMIN CONTROL PANEL </h4>
                            <hr class="line">

                            <ul class="nav flex-column list-features">

                                <li class="nav-item">
                                    <a class="nav-link" href="/adminManager/appointments">View All Appointments</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/adminManager/doctor">View All Doctors</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/adminManager/patient">View All Patients</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/addUser">Add a new user</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/editDetails">Edit personal details</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/changePassword">Change password</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/users/logout">Log out</a>
                                </li>

                            </ul>
                        </div>
                    </aside>

                {{else}}
                    <div class="alert alert-danger">
                        <span> There was an error trying to display the correct control panel, please login again. </span>
                    </div>

                    <aside class="col-lg-4 col-mg-12 col-sm-12">
                        <div class="control-panel">
                            <h4> CONTROL PANEL </h4>
                            <hr class="line">

                            <ul class="nav flex-column list-features">

                                <li class="nav-item">
                                    <a class="nav-link" href="/viewDoctors">View Doctors</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/editDetails">Edit personal details</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/changePassword">Change password</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/users/logout">Log out</a>
                                </li>

                            </ul>
                        </div>
                    </aside>
                {{/if}}

          {{/if}}

          {{{body}}}

      </div>
    </div>
  </div>


    <!-- Footer -->
    <footer>
      <ul class="nav justify-content-center">
          <a href="">About UTS</a>
          <a href="">Library</a>
          <a href="">Newsroom</a>
          <a href="">Staff</a>
          <a href="/contactus">Contact us</a>
      </ul>
        <p class="copyright">&copy; 2018 MASTODON, Inc.</p>
    </footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/js/bootstrap-select.min.js"></script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/css/bootstrap-select.min.css">

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>


</body>

</html>
