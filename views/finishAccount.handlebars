<h2 class="page-header">Finalize your account</h2>
 {{#if errors}} {{#each errors}}
<div class="alert alert-danger">{{msg}}</div>
{{/each}} {{/if}}

<form method="post" action="/users/registerSpecial/confirm">
<div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" placeholder="Username" name="username">
  </div>
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" placeholder="Name" name="name">
  </div>

  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password">
  </div>

  <div class="form-group">
    <label>Confirm Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password2">
  </div>
  {{#ifEquals userTemp.userType "doctor"}}
        <div id="bio" style="display: block" class="form-group">
            <label>Bio</label>
            <textarea class="form-control" name="bio" placeholder="John is the Robert P. Kelch, MD Research Professor of Pediatrics at the ..." rows="5"></textarea>
        </div>

        <div id="specialty" style="display: block;" class="form-group">
            <label>Specialty</label>
            <input type="text" class="form-control" placeholder="Pathology" name="specialty">
        </div>
    {{/ifEquals}}
    <input type="hidden" name="id" value="{{userTemp._id}}">
    <button type="submit" class="btn btn-default">Submit</button>
</form>

