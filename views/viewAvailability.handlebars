<main class="container-fluid">
    <div class="row">
        <section class="col-lg-8">

            <!-- TABLE -->
            <div class="panel panel-default panel-table mytable">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title tableheading">View Availabilities for {{doctor.name}}</h3>
                        </div>
                    </div>
                </div>

                <div id="doctor" style="display: block" class="panel-body">
                    <table class="table table-striped table-bordered table-list">

                        <thead>
                        <tr>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Location</th>
                        </tr>
                        </thead>

                        {{#each availabilities}}
                        
                            {{#ifEquals this.doctorId ../doctor._id}}
                                <tr>
                                    {{#ifEquals this.appointment.studentId ../user._id}}
                                        <td bgcolor="#e5f442" id="bookedStatus">Booked by you</td>
                                    {{else}}
                                        <td bgcolor="#ff5e5e" id="bookedStatus">Booked</td>
                                    {{/ifEquals}}
                                    <td>{{this.appointment.date}}</td>
                                    <td>{{this.appointment.time}}</td>
                                    <td>Level 6, Building 1 (UTS Tower) - 01.06.001</td>
                                </tr>
                            {{/ifEquals}}
                        {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
            <!-- TABLE END -->
        </section>
    </div>
</main>
