<main class="container-fluid">
    <div class="row">
        <section class="col-lg-8">
            {{#if errors}} {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
            
            {{/each}} {{/if}}
            <h2 class="page-header"><p align="left">Add a user</p></h2>
            <form method="post" action="/addUser">
                    <div class="form-group">
                        <p align="left"><label>Email</label></p>
                        <input type="email" class="form-control" placeholder="Email" name="email">
                    </div>

                    <div class="form-group">
                        <label>User Type</label>
                        <select id="selected" name="type">
                            <option value="student">Student</option>
                            <option value="admin">UTS Staff</option>
                            <option value="doctor">Medical Staff</option>
                        </select>
                    </div>

                    <p align="left"><button type="submit" class="btn btn-default">Submit</button></p>
            </form>
        </section>
    </div>
</main>
